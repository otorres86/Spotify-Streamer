<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeight"
    android:padding="@dimen/listview_item_padding"
    android:background="@drawable/touch_selector">

    <ImageView
        android:id="@+id/track_item_icon"
        android:layout_width="@dimen/listview_item_icon_width"
        android:layout_height="@dimen/listview_item_icon_height"/>

    <LinearLayout
        android:layout_width="@dimen/layout_zero_width"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/listview_item_padding">

        <TextView
            android:id="@+id/listview_item_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listview_item_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"/>

    </LinearLayout>

</LinearLayout>